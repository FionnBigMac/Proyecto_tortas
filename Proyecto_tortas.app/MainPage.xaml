<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proyecto_tortas.app.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image Source="https://www.sabermas.umich.mx/images/stories/50/ARTICULO7B.png"></Image>
            <Entry x:Name="txtUser" Placeholder="Introduce tu usuario"></Entry>
            <Entry x:Name="txtEmail" Placeholder="Introduce tu correo"></Entry>
            <Entry x:Name="txtPassword" Placeholder="Introduce tu contraseña" IsPassword="True"></Entry>
            <Button x:Name="btnLogin" Text="Acceder" Clicked="btnLogin_Clicked"></Button>
            <Button x:Name="btnRegister" Text="Registrarse" Clicked="btnRegister_Clicked"></Button>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
